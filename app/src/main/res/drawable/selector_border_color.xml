<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/selected_border_color" android:width="2dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/default_border_color" android:width="2dp"/>
        </shape>
    </item>

</selector>